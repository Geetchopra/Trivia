<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Trivia Games</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <link href="style.css" rel="stylesheet" type="text/css" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
    </head>
    <body background="images/home_background.png">

        <!--top resposive navigation bar begins-->
        <div class="topnav" id="top_nav">
            <% if(typeof current != 'undefined'){ %>
                <a href="javascript:void(0);" id="username_nav" >Hi, <%= current.username %></a>
            <% } %>
            <a href="/" id="home_nav" >Home</a>
            <a href="/leaderboard" id="leader_nav" >Leader Board</a>
            <a href="/newgame" id="game_nav" >New Game</a>
            <a href="/about" id="about_nav" >About</a>
            <a href="javascript:void(0);" id="my_account_nav" class="active" >My Account</a>
            <% if(typeof current != 'undefined'){ %>
                <a href="/question" id="question_nav" >Manage Trivia</a>
            <% } %>
            <% if(typeof current != 'undefined'){ %>
                <a href="/logout" id="log_out" >Log Out</a>
            <% } %>
            <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="changeNavBar()">&#9776;</a>
        </div>
        <!--top resposive navigation bar ends-->

        <!--My Account section from navigation bar begins-->
        <div class='questions' id='question_list'>
            <% if(typeof questions != 'undefined'){ %>
            <h4 class="q_delete" style="margin-bottom: 10px;">Click on a question to delete it!</h4>
            <% for (var i=0;i<questions.length;i++){ %>
                <form id="usr_form_input" action="/question?_method=DELETE" method="POST">
                    <input type="hidden" name="questionId" value="<%= questions[i]._id %>">
                    <button class="delete_btn" id="delete_btn" type="submit">
                        <%=questions[i].question %>
                    </button>
                </form>
            <% } %>
            <% } %>
        </div>
        <!--My Account section from navigation bar ends-->

    </body>
    <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
    <script src="script.js"></script>
</html>
